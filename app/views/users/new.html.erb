<h1>Sign Up</h1>

<%= form_for @user do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="form-group">	
		<%= f.label :email %>
		<%= f.text_field :email, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control" %>
	</div>

	<%= f.submit "Sign Up", class: "btn btn-primary" %>
<% end %>
